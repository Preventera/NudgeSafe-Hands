{
  "name": "@preventera/nudgesafe-hands",
  "version": "1.0.0",
  "description": "NudgeSafe Hands - Behavioral AI for Hand Safety",
  "main": "src/api/server.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:frontend": "http-server src/app -p 3000 -o",
    "dev:api": "nodemon src/api/server.js",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "echo 'Frontend build placeholder'",
    "build:api": "echo 'API build placeholder'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "deploy": "npm run build && node scripts/deploy.js",
    "docs": "jsdoc -c jsdoc.json",
    "start": "node src/api/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Preventera/NudgeSafe-Hands.git"
  },
  "keywords": [
    "nudgesafe",
    "hand-safety",
    "behavioral-ai",
    "hse",
    "ohs",
    "preventera",
    "agenticx5",
    "chemical-safety",
    "ppe",
    "glove-selector"
  ],
  "author": "Preventera Inc. <info@preventera.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Preventera/NudgeSafe-Hands/issues"
  },
  "homepage": "https://github.com/Preventera/NudgeSafe-Hands#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "jest": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "jsdoc": "^4.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
